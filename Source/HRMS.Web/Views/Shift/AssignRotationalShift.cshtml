@{
    Layout = "_Layout";
    ViewData["Title"] = "Assign Rotational Shift";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Assign Rotational Shift</h2>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post">
        <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />

        <div class="form-group">
            <label for="shiftCycle">Shift Cycle ID</label>
            <input type="number" id="shiftCycle" name="shiftCycle" placeholder="Enter shift cycle ID" required />
            <small>Note: Shift cycle must be created in the database first</small>
        </div>

        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" required />
        </div>

        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" required />
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" required>
                <option value="Active">Active</option>
                <option value="Assigned">Assigned</option>
            </select>
        </div>

        <button type="submit" style="width: 100%;">Assign Rotational Shift</button>
    </form>

    <div style="margin-top: 20px;">
        <a asp-action="AssignRotationalShift">Select Different Employee</a>
    </div>
</div>

