@model List<Employee>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Employees</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center">No employees found.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                    @if (User.IsInRole("System Admin"))
                    {
                        <th>Manage Roles</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td><strong>@e.FullName</strong></td>
                        <td>@e.Email</td>
                        <td>
                            <a asp-action="View" asp-route-id="@e.EmployeeId" class="btn btn-small">
                                View Profile
                            </a>
                        </td>
                        @if (User.IsInRole("System Admin"))
                        {
                            <td>
                                <a asp-controller="Admin" asp-action="AssignRole" asp-route-id="@e.EmployeeId" class="btn btn-small btn-secondary">
                                    Assign Role
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-action="LoginSuccess" asp-controller="Account" class="btn btn-secondary">
            ‚Üê Back to Dashboard
        </a>
    </div>
</div>

