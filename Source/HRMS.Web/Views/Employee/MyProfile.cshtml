@model Employee
@{
    Layout = "_Layout";
}

<h2>My Profile</h2>

<p>This page will show employee details.</p>

@if (!string.IsNullOrEmpty(Model.ProfileImage))
{
    <img src="~/uploads/@Model.ProfileImage"
         width="150"
         alt="Profile Picture" />
}
else
{
    <p>No profile picture uploaded</p>
}

<form asp-action="UploadProfileImage"
      asp-controller="Employee"
      method="post"
      enctype="multipart/form-data">

    <input type="file" name="profileImage" accept="image/*" required />

    <button type="submit">Upload Profile Picture</button>
</form>

<div>
    <a asp-action="EditMyProfile">Edit My Profile</a><br />
    <a href="/Account/LoginSuccess">Back to Dashboard</a>
</div>
