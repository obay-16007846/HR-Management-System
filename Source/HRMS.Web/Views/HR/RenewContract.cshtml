@{
    var currentType = ViewBag.CurrentType?.ToString() ?? "";
    var currentStartDate = ViewBag.CurrentStartDate?.ToString() ?? "";
    var currentEndDate = ViewBag.CurrentEndDate?.ToString() ?? "";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Renew Contract</h2>
    </div>

    <div class="info-box mb-4" style="padding: 24px 24px 24px 24px; margin-top: 24px; margin-bottom: 24px; margin-left: 24px; margin-right: 24px;">
        <strong>Contract ID:</strong> @ViewBag.ContractId<br />
        <strong>Employee ID:</strong> @ViewBag.EmployeeId<br />
        <strong>Employee Name:</strong> @ViewBag.EmployeeName
    </div>

    <form method="post">
        <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />
        <input type="hidden" name="contractId" value="@ViewBag.ContractId" />

        <div class="form-group">
            <label for="type">Contract Type</label>
            <select id="type" name="type" required>
                @if (currentType == "FullTime")
                {
                    <option value="FullTime" selected>Full Time</option>
                }
                else
                {
                    <option value="FullTime">Full Time</option>
                }
                @if (currentType == "PartTime")
                {
                    <option value="PartTime" selected>Part Time</option>
                }
                else
                {
                    <option value="PartTime">Part Time</option>
                }
                @if (currentType == "Consultant")
                {
                    <option value="Consultant" selected>Consultant</option>
                }
                else
                {
                    <option value="Consultant">Consultant</option>
                }
                @if (currentType == "Internship")
                {
                    <option value="Internship" selected>Internship</option>
                }
                else
                {
                    <option value="Internship">Internship</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" value="@currentStartDate" required />
        </div>

        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" value="@currentEndDate" required />
        </div>

        <button type="submit" style="width: 100%;">Renew Contract</button>
    </form>
</div>

