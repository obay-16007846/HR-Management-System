@model List<ExpiringContract>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Expiring & Expired Contracts</h2>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <p class="text-center" style="padding: 40px; color: var(--text-secondary);">No expiring or expired contracts found.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Email</th>
                    <th>Contract Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td><strong>@c.FullName</strong></td>
                        <td>@c.Email</td>
                        <td>@c.ContractType</td>
                        <td>@c.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@c.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(c.CurrentState == "Active" ? "badge-warning" : "badge-danger")">
                                @c.CurrentState
                            </span>
                        </td>
                        <td>
                            <a href="/HR/RenewContract?employeeId=@c.EmployeeId&contractId=@c.ContractId" class="btn btn-small">
                                Renew
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

