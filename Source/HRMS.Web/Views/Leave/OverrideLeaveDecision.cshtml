@model LeaveRequest
@{
    Layout = "_Layout";
    ViewData["Title"] = "Override Leave Decision";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Override Leave Decision</h2>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }

    <div class="card-body">
        <h3>Current Request Details</h3>
        <dl class="row">
            <dt class="col-sm-3">Request ID:</dt>
            <dd class="col-sm-9">@Model.RequestId</dd>

            <dt class="col-sm-3">Employee:</dt>
            <dd class="col-sm-9">@Model.EmployeeName</dd>

            <dt class="col-sm-3">Leave Type:</dt>
            <dd class="col-sm-9">@Model.LeaveType</dd>

            <dt class="col-sm-3">Current Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == "Approved" ? "badge-success" : 
                                     Model.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                    @Model.Status
                </span>
            </dd>
        </dl>

        <hr />

        <form method="post" asp-action="OverrideLeaveDecision">
            <input type="hidden" name="requestId" value="@Model.RequestId" />

            <div class="form-group">
                <label for="newStatus">New Status *</label>
                <select id="newStatus" name="newStatus" required class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Finalized">Finalized</option>
                </select>
            </div>

            <div class="form-group">
                <label for="reason">Override Reason *</label>
                <textarea id="reason" name="reason" rows="4" required class="form-control" placeholder="Please provide a reason for overriding this decision"></textarea>
            </div>

            <div class="alert alert-warning">
                <strong>Warning:</strong> Overriding a leave decision will update the request status and may affect leave balances and attendance records.
            </div>

            <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to override this leave decision?')">Override Decision</button>
            <a asp-action="AllLeaveRequests" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

