@{
    Layout = "_Layout";
    ViewData["Title"] = "Assign Leave Entitlement";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Assign Leave Entitlement</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }

    <form method="post" asp-action="AssignLeaveEntitlement">
        <div class="form-group">
            <label for="employeeId">Employee *</label>
            <select id="employeeId" name="employeeId" required class="form-control">
                <option value="">-- Select Employee --</option>
                @if (ViewBag.Employees != null)
                {
                    @foreach (var emp in (List<Employee>)ViewBag.Employees)
                    {
                        <option value="@emp.EmployeeId">@emp.FullName (@emp.Email)</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="leaveTypeId">Leave Type *</label>
            <select id="leaveTypeId" name="leaveTypeId" required class="form-control">
                <option value="">-- Select Leave Type --</option>
                @if (ViewBag.LeaveTypes != null)
                {
                    @foreach (var leaveType in (List<Leave>)ViewBag.LeaveTypes)
                    {
                        <option value="@leaveType.LeaveId">@leaveType.LeaveType</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="entitlement">Entitlement (Days) *</label>
            <input type="number" id="entitlement" name="entitlement" min="0" step="0.5" required class="form-control" placeholder="e.g., 30" />
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%;">Assign Entitlement</button>
    </form>

    <div style="margin-top: 20px;">
        <a asp-action="ManageLeaveTypes">Back to Manage Leave Types</a>
    </div>
</div>

