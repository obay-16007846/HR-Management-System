@{
    Layout = "_Layout";
}

<div class="card" style="max-width: 500px; margin: 40px auto;">
    <div class="card-header">
        <h2 class="card-title">First Time Login - Set Your Password</h2>
    </div>

    <div class="info-box" style="padding: 24px 24px 24px 24px; margin-top: 24px; margin-bottom: 24px; margin-left: 24px; margin-right: 24px;">
        <p style="margin: 0;">Welcome! Please set your National ID as your password to complete your account setup.</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-error">
            @ViewBag.Error
        </div>
    }

    <form method="post">
        <input type="hidden" name="email" value="@ViewBag.Email" />
        <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />

        <div class="form-group">
            <label for="email-display">Email</label>
            <input type="email" id="email-display" value="@ViewBag.Email" disabled />
        </div>

        <div class="form-group">
            <label for="nationalId">National ID (This will be your password)</label>
            <input type="text" id="nationalId" name="nationalId" placeholder="Enter your National ID" required />
        </div>

        <button type="submit" style="width: 100%;">Set Password and Continue</button>
    </form>
</div>

